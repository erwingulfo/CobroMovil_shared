<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/clave"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/IniciarSesion"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/clave"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:hint="@string/nombre_de_usuario" />

    <EditText
        android:id="@+id/clave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/usuario"
        android:ems="10"
        android:hint="@string/Clave2"
        android:inputType="textPassword" />

        <Button
            android:id="@+id/BtnRegistrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/clave"
            android:layout_below="@+id/clave"
            android:drawableLeft="@drawable/ic_action_secure"
            android:text="@string/Registrese" />

        <Button
            android:id="@+id/BtnEntrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/BtnRegistrarse"
            android:layout_alignBottom="@+id/BtnRegistrarse"
            android:layout_toLeftOf="@+id/BtnRegistrarse"
            android:drawableLeft="@drawable/ic_action_secure"
            android:text="@string/Entrar" />
   
</RelativeLayout>