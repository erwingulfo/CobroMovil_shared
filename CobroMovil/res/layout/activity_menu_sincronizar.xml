<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    tools:context=".Menu_clientes" >

    <TextView
        android:id="@+id/TextView1CampoUsuarioVacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/bienvenidos" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView1CampoUsuarioVacio"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextView1CampoUsuarioVacio"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/bt_sincronizar_clientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView1CampoUsuarioVacio"
        android:layout_marginTop="14dp"
        android:drawableLeft="@drawable/ic_action_download"
        android:gravity="left"
        android:text="@string/BajarClientes" />

    <Button
        android:id="@+id/btn_subir_ecaudos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_sincronizar_clientes"
        android:drawableLeft="@drawable/ic_action_import_export2"
        android:gravity="left"
        android:text="@string/SubirRecaudos" />

    <Button
        android:id="@+id/bt_sincronizar_cobradores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_subir_ecaudos"
        android:drawableLeft="@drawable/ic_action_download"
        android:gravity="left"
        android:text="@string/BajarCobradores" />

    <Button
        android:id="@+id/bt_sincronizar_cartera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_sincronizar_cobradores"
        android:drawableLeft="@drawable/ic_action_download"
        android:gravity="left"
        android:text="@string/BajarCartera" />

    <Button
        android:id="@+id/bt_sincronizar_todos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_sincronizar_usuarios"
        android:drawableLeft="@drawable/ic_action_download"
        android:gravity="left"
        android:text="@string/BajarTodo" />

    <Button
        android:id="@+id/bt_sincronizar_usuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_sincronizar_cartera"
        android:drawableLeft="@drawable/ic_action_download"
        android:gravity="left"
        android:text="@string/BajarUsuariosSistema" />

</RelativeLayout>