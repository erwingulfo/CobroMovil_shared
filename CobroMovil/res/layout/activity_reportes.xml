<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".Reportes" >

    <TextView
        android:id="@+id/TextView1CampoUsuarioVacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/bienvenidos" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView1CampoUsuarioVacio"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextView1CampoUsuarioVacio"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/m_reportes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView1CampoUsuarioVacio"
        android:drawableLeft="@drawable/ic_action_computer"
        android:gravity="left"
        android:text="@string/RecaudoDiario" />

</RelativeLayout>