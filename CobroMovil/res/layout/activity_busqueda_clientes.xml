<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494949"
    tools:context=".Busqueda_clientes" >

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:text="Bienvenido:" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv6"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv4"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/tv6" />

    <Button
        android:id="@+id/consultar_clientes"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nit_nombres"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nit_nombres"
        android:drawableLeft="@drawable/ic_action_search"
        android:text="Buscar"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv6"
        android:text="Búsqueda por cédula:"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/nit_nombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv4"
        android:layout_toLeftOf="@+id/consultar_clientes"
        android:ems="10"
        android:hint="Ingrese cédula"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nit_nombres"
        android:text="Resultado de la Búsqueda:"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv7"
        android:textColor="#ffffff" />

</RelativeLayout>